<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.shape.Rectangle?>

<!-- Scroll bar on the right of the main view.
There is a transparent virtual zone larger than the visible bar for those who touch the screen with fingers.
-->
<Group fx:id="scrollbarGroup" style="-fx-background-color: #2e2e2e;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.weasis.touch.gui.ScrollController">
   <children>
      <Rectangle fx:id="zoneScrollVirtual" arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="200.0" strokeType="INSIDE" style="-fx-background-color: #2e2e2e;" width="100.0" />
      <ScrollBar fx:id="scrollBar" blockIncrement="1.0" disable="true" layoutX="40.0" layoutY="50.0" max="0.0" min="0.0" orientation="VERTICAL" stylesheets="@application.css" visibleAmount="1.0">
      </ScrollBar>
   </children>
</Group>
